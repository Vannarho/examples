<?xml version="1.0"?>
<Conventions>
  <!-- Deposits (index-based) -->
  <Deposit>
    <Id>EUR-ON-DEPOSIT-ESTER</Id>
    <IndexBased>true</IndexBased>
    <Index>EUR-ESTER</Index>
  </Deposit>
  <Deposit>
    <Id>EUR-ON-DEPOSIT</Id>
    <IndexBased>true</IndexBased>
    <Index>EUR-ESTER</Index>
  </Deposit>
  <Deposit>
    <Id>EUR-DEPOSIT</Id>
    <IndexBased>true</IndexBased>
    <Index>EUR-EURIBOR</Index>
  </Deposit>
  <Deposit>
    <Id>USD-ON-SOFR-DEPOSIT</Id>
    <IndexBased>true</IndexBased>
    <Index>USD-SOFR</Index>
  </Deposit>
  <Deposit>
    <Id>GBP-ON-DEPOSIT-SONIA</Id>
    <IndexBased>true</IndexBased>
    <Index>GBP-SONIA</Index>
  </Deposit>

  <!-- OIS -->
  <OIS>
    <Id>EUR-ESTER-OIS</Id>
    <SpotLag>1</SpotLag>
    <Index>EUR-ESTER</Index>
    <FixedDayCounter>A360</FixedDayCounter>
    <PaymentLag>1</PaymentLag>
    <EOM>false</EOM>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedPaymentConvention>MF</FixedPaymentConvention>
    <Rule>Backward</Rule>
  </OIS>
  <OIS>
    <Id>USD-SOFR-OIS</Id>
    <SpotLag>0</SpotLag>
    <Index>USD-SOFR</Index>
    <FixedDayCounter>A360</FixedDayCounter>
    <PaymentLag>2</PaymentLag>
    <EOM>false</EOM>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedPaymentConvention>MF</FixedPaymentConvention>
    <Rule>Backward</Rule>
  </OIS>
  <OIS>
    <Id>GBP-SONIA-OIS</Id>
    <SpotLag>0</SpotLag>
    <Index>GBP-SONIA</Index>
    <FixedDayCounter>A365F</FixedDayCounter>
    <PaymentLag>1</PaymentLag>
    <EOM>false</EOM>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>Following</FixedConvention>
    <FixedPaymentConvention>Following</FixedPaymentConvention>
    <Rule>Backward</Rule>
  </OIS>

  <!-- Minimal IRS conventions used by CMS swap index definitions -->
  <Swap>
    <Id>EUR-6M-SWAP-CONVENTIONS</Id>
    <FixedCalendar>TARGET</FixedCalendar>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedDayCounter>30/360</FixedDayCounter>
    <Index>EUR-EURIBOR-6M</Index>
  </Swap>
  <Swap>
    <Id>USD-3M-SWAP-CONVENTIONS</Id>
    <FixedCalendar>US,UK</FixedCalendar>
    <FixedFrequency>Semiannual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedDayCounter>30/360</FixedDayCounter>
    <Index>USD-LIBOR-3M</Index>
  </Swap>
  <Swap>
    <Id>GBP-6M-SWAP-CONVENTIONS</Id>
    <FixedCalendar>UK</FixedCalendar>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedDayCounter>30/360</FixedDayCounter>
    <Index>GBP-LIBOR-6M</Index>
  </Swap>

  <!-- SwapIndex identifiers expected by todaysmarket.xml -->
  <SwapIndex>
    <Id>EUR-CMS-1Y</Id>
    <Conventions>EUR-6M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>
  <SwapIndex>
    <Id>EUR-CMS-30Y</Id>
    <Conventions>EUR-6M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>
  <SwapIndex>
    <Id>USD-CMS-SOFR-1Y</Id>
    <Conventions>USD-3M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>
  <SwapIndex>
    <Id>USD-CMS-SOFR-30Y</Id>
    <Conventions>USD-3M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>
  <SwapIndex>
    <Id>GBP-CMS-SONIA-1Y</Id>
    <Conventions>GBP-6M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>
  <SwapIndex>
    <Id>GBP-CMS-SONIA-30Y</Id>
    <Conventions>GBP-6M-SWAP-CONVENTIONS</Conventions>
  </SwapIndex>

  <!-- Minimal CDS conventions used by default curve builders -->
  <CDS>
    <Id>CDS-STANDARD-CONVENTIONS</Id>
    <SettlementDays>1</SettlementDays>
    <Calendar>WeekendsOnly</Calendar>
    <Frequency>Quarterly</Frequency>
    <PaymentConvention>Following</PaymentConvention>
    <Rule>CDS2015</Rule>
    <DayCounter>A360</DayCounter>
    <SettlesAccrual>true</SettlesAccrual>
    <PaysAtDefaultTime>true</PaysAtDefaultTime>
  </CDS>

  <!-- Additional conventions for EURIBOR projection curves -->
  <Swap>
    <Id>EUR-EURIBOR-3M-SWAP</Id>
    <FixedCalendar>TARGET</FixedCalendar>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedDayCounter>30/360</FixedDayCounter>
    <Index>EUR-EURIBOR-3M</Index>
  </Swap>
  <Swap>
    <Id>EUR-EURIBOR-6M-SWAP</Id>
    <FixedCalendar>TARGET</FixedCalendar>
    <FixedFrequency>Annual</FixedFrequency>
    <FixedConvention>MF</FixedConvention>
    <FixedDayCounter>30/360</FixedDayCounter>
    <Index>EUR-EURIBOR-6M</Index>
  </Swap>
</Conventions>

