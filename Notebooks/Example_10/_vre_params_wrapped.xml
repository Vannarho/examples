<?xml version="1.0"?>
<VRE>
  <Setup>
    <Parameter name="asofDate">2016-02-05</Parameter>
    <Parameter name="inputPath">Input/FRTB_SA</Parameter>
    <Parameter name="outputPath">Output/FRTB_SA/SBM</Parameter>
    <Parameter name="logFile">log.txt</Parameter>
    <Parameter name="logMask">255</Parameter>
    <Parameter name="marketDataFile">frtb_sa_market_20160205.txt</Parameter>
    <Parameter name="fixingDataFile">frtb_sa_fixings_20160205.txt</Parameter>
    <Parameter name="implyTodaysFixings">N</Parameter>
    <Parameter name="curveConfigFile">frtb_sa_curveconfig.xml</Parameter>
    <Parameter name="conventionsFile">frtb_sa_conventions.xml</Parameter>
    <Parameter name="marketConfigFile">frtb_sa_todaysmarket.xml</Parameter>
    <Parameter name="pricingEnginesFile">frtb_sa_pricingengine.xml</Parameter>
    <Parameter name="portfolioFile">frtb_sa_portfolio.xml</Parameter>
    <Parameter name="observationModel">None</Parameter>
    <Parameter name="referenceDataFile">trade_reference.xml</Parameter>
    <Parameter name="tradingDeskFile">../../../../../Input/tradingdesk.xml</Parameter>
    <Parameter name="baseCurrency">EUR</Parameter>
    <Parameter name="nThreads">1</Parameter>
  </Setup>
  <Markets>
    <Parameter name="lgmcalibration">collateral_inccy</Parameter>
    <Parameter name="fxcalibration">xois_eur</Parameter>
    <Parameter name="pricing">xois_eur</Parameter>
    <Parameter name="simulation">xois_eur</Parameter>
    <Parameter name="sensitivity">xois_eur</Parameter>
  </Markets>
  <Analytics>
    <Analytic type="npv">
      <Parameter name="active">Y</Parameter>
      <Parameter name="baseCurrency">EUR</Parameter>
      <Parameter name="outputFileName">npv.csv</Parameter>
    </Analytic>
    <Analytic type="cashflow">
      <Parameter name="active">Y</Parameter>
      <Parameter name="outputFileName">flows.csv</Parameter>
    </Analytic>
    <Analytic type="curves">
      <Parameter name="active">Y</Parameter>
      <Parameter name="configuration">default</Parameter>
      <Parameter name="grid">240,1M</Parameter>
      <Parameter name="outputFileName">curves.csv</Parameter>
    </Analytic>
    <Analytic type="frtb_sa">
      <Parameter name="active">Y</Parameter>
      <Parameter name="method">Sensitivities-Based</Parameter>
      <!-- embedded FRTB_SA sensitivity configuration -->
      <Parameter name="marketConfigFile">frtb_sa_simulation.xml</Parameter>
      <Parameter name="sensitivityConfigFile">frtb_sa_sensitivity.xml</Parameter>
      <Parameter name="pricingEnginesFile">frtb_sa_pricingengine.xml</Parameter>
      <Parameter name="outputSensitivityThreshold">0.000001</Parameter>
      <Parameter name="recalibrateModels">Y</Parameter>
      <Parameter name="parSensitivity">Y</Parameter>
      <Parameter name="optimiseRiskFactors">Y</Parameter>
      <Parameter name="outputJacobi">Y</Parameter>
      <Parameter name="alignPillars">Y</Parameter>
      <!-- end embedded configuration -->
    </Analytic>
  </Analytics>
</VRE>
